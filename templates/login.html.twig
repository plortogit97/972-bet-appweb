{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <main class="container content">
        <div class="login-container">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Connexion</h2>
                    {{ form_start(form) }}
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            {{ form_widget(form._username, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom d\'utilisateur', 'required': 'required', 'autofocus': 'autofocus'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            {{ form_widget(form._password, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe', 'required': 'required'}}) }}
                        </div>
                        <button type="submit" class="btn-login">Se connecter</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
